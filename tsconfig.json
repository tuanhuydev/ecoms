{
    "compilerOptions": {
      "outDir": "./public/js/",
      "noImplicitAny": true,
      "sourceMap": true,
      "allowJs": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@assets/*": ["./resources/assets/*"],
        "@components/*": ["./resources/scripts/components/*"],
        "@containers/*": ["./resources/scripts/containers/*"],
      }
    }
  }